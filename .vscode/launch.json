  "version": "0.2.0",
  "configurations": [
    {
      "command": "yarn nx serve frontend",  
      "name": "Run Client",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/apps/frontend" 
    },
    {
      "command": "npx nx serve backend",
      "name": "Run Server",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/apps/backend",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "command": "node seed.js",
      "name": "Seed users",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/libs/prisma/src",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "command": "npx prisma studio",
      "name": "Run Prisma Studio",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/libs/prisma/src",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "command": "yarn test",
      "name": "Run test",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/apps/backend"
    },
    {
      "name": "Echo Working Directory",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}", // this specifies the current working directory
      "command": "echo Current working directory: && pwd"
    }
  ]
}
